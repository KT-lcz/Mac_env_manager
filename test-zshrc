# Test shell configuration
# This is a sample .zshrc file for testing

# Path configuration
export PATH="/usr/local/bin:/usr/bin:/bin:$PATH"
export PATH="$PATH:/usr/local/sbin"

# Development environment
export NODE_ENV=development
export REACT_APP_API_URL=http://localhost:3000
export DEBUG=myapp:*

# Database configuration
export DATABASE_URL="postgres://localhost:5432/myapp"
export REDIS_URL="redis://localhost:6379"

# API Keys (example - not real)
export OPENAI_API_KEY="sk-example-key-here"
export STRIPE_SECRET_KEY="sk_test_example"

# Custom aliases (these should be preserved)
alias ll="ls -la"
alias gs="git status"
alias gc="git commit"
alias gp="git push"

# Functions (these should be preserved)
function mkcd() {
    mkdir -p "$1" && cd "$1"
}

# More environment variables
export EDITOR=vim
export BROWSER=chrome
export TERM=xterm-256color

# Custom prompt configuration (should be preserved)
PROMPT='%F{blue}%n@%m%f:%F{green}%~%f$ '

# End of configuration